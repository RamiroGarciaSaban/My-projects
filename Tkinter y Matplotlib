#Librerias.
import tkinter as tk
from tkinter import Variable, ttk
from tkinter import Menu
from tkinter.constants import BOTH
from typing import Text
from tkinter import messagebox as mBox
import matplotlib.pyplot as plt

#Funciones.
def funcion_caja_mensaje():
    mBox.showinfo('Mensaje de Python en una caja de mensajes',
    'Esta  interface fué creada con Tkinter.')



#Ventana principal.
ventana_principal = tk.Tk()
ventana_principal.title("ProStats")
ventana_principal.geometry('1500x844')

#Menu
barra_menu = Menu(ventana_principal)
ventana_principal.config(menu=barra_menu)

#Opcion 1   
opcion1 = Menu(barra_menu, tearoff=0)
opcion1.add_command(label="Nuevo")  
opcion1.add_command(label="Salir")
barra_menu.add_cascade(label="Opción 1", menu=opcion1)

#Opción 2
opcion2 = Menu(barra_menu, tearoff=0)
opcion2.add_command(label="Acerca de")
opcion2.add_command(label="hola",  command=funcion_caja_mensaje)
barra_menu.add_cascade(label="opcion2", menu=opcion2)

#Opción 3
opcion3 = Menu(barra_menu, tearoff=0)
opcion3.add_command(label="Acerca de")
opcion3.add_command(label="hola")
barra_menu.add_cascade(label="opcion2", menu=opcion3)

#Opción 4
opcion4 = Menu(barra_menu, tearoff=0)
opcion4.add_command(label="Acerca de")
opcion4.add_command(label="hola")
barra_menu.add_cascade(label="opcion2", menu=opcion4)

#Opción 5
opcion5 = Menu(barra_menu, tearoff=0)
opcion5.add_command(label="Acerca de")
opcion5.add_command(label="hola")
barra_menu.add_cascade(label="opcion2", menu=opcion5)

#Agregar una etiqueta.
bienvenido = ttk.Label(ventana_principal, text='Bienvenido, ten un gran día!')
bienvenido.grid(column=0, row=1)

#Ejemplo de grafíca.
x = [1, 2, 3, 4, 5]
y = [10, 20, 30, 40, 50]

plt.plot(x,y)
plt.show()




#Ventana principal activa.
ventana_principal.mainloop()
